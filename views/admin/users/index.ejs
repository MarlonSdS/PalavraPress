<%- include("../../partials/header") %>
<%- include("../../partials/navbar") %>
<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a href="/admin/users/create" class="btn btn-success">Criar Novo Usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Login</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                 <tr>
                    <th><%= user.id %></th>
                    <th><%= user.login %></th>
                    <th>
                        
                        <a href="/admin/user/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
                        <form method="POST" action="/users.delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= user.id  %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
           <% }) %>
            
        </tbody>
    </table>
</div>
<%- include("../../partials/footer") %>